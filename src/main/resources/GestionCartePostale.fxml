<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.GestionCartePostaleController">
    <children>
        <Label text="Gérer les Cartes Postales" layoutX="20" layoutY="20" />

        <Label text="Titre:" layoutX="20" layoutY="60" />
        <TextField fx:id="fieldTitreCartePostale" layoutX="100" layoutY="60" />

        <Label text="Quantité:" layoutX="20" layoutY="100" />
        <TextField fx:id="fieldQuantite" layoutX="100" layoutY="100" />

        <Button text="Ajouter" layoutX="20" layoutY="160" onAction="#handleAjouterCartePostale" />
        <Button text="Modifier" layoutX="100" layoutY="160" onAction="#handleModifierCartePostale" />
        <Button text="Supprimer" layoutX="180" layoutY="160" onAction="#handleSupprimerCartePostale" />

        <TableView fx:id="tableCartePostale" layoutX="20" layoutY="200" prefHeight="200" prefWidth="360">
            <columns>
                <TableColumn text="Titre" fx:id="colTitreCartePostale" />
                <TableColumn text="Quantité" fx:id="colQuantite" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
