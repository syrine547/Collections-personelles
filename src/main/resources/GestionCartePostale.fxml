<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.GestionCartePostaleController">

    <!-- Partie haute : Champs pour ajouter/modifier une carte postale -->
    <top>
        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="fieldTitreCartePostale" promptText="Titre de la carte postale" />
                <TextField fx:id="fieldQuantite" promptText="Quantité" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Ajouter" onAction="#handleAjouterCartePostale" />
                <Button text="Modifier" onAction="#handleModifierCartePostale" />
                <Button text="Supprimer" onAction="#handleSupprimerCartePostale" />
            </HBox>
        </VBox>
    </top>

    <!-- Partie centrale : TableView pour afficher les cartes postales -->
    <center>
        <TableView fx:id="tableCartePostale" prefHeight="400">
            <columns>
                <TableColumn fx:id="colTitreCartePostale" text="Titre" prefWidth="200" />
                <TableColumn fx:id="colQuantite" text="Quantité" prefWidth="150" />
            </columns>
        </TableView>
    </center>

    <!-- Partie basse : Bouton pour revenir au tableau de bord -->
    <bottom>
        <HBox alignment="CENTER">
            <Button text="Retour au Dashboard" onAction="#handleRetourDashboard" />
        </HBox>
    </bottom>
</BorderPane>
