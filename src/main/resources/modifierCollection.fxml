<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.ModifierCollectionController">
    <Label text="Modifier la Collection" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="fieldNomCollection" promptText="Nom de la collection" />
    <TextField fx:id="fieldObjectifTotal" promptText="Objectif total" />
    <TableView fx:id="tableAttributs" prefHeight="200">
        <columns>
            <TableColumn text="Nom Attribut" fx:id="colNomAttribut" />
            <TableColumn text="Type Attribut" fx:id="colTypeAttribut" />
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button text="Ajouter un attribut" onAction="#handleAjouterAttribut" />
        <Button text="Supprimer un attribut" onAction="#handleSupprimerAttribut" />
    </HBox>
    <Button text="Enregistrer les modifications" onAction="#handleEnregistrerModifications" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" />
</VBox>

