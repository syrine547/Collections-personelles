<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ProfilController" style="-fx-background-color: #f5f5f5;">

    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="15" vgap="15" style="-fx-padding: 20;">

        <!-- Nom d'utilisateur -->
        <Label text="Nom d'utilisateur :" style="-fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Email -->
        <Label text="Email :" style="-fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Nom -->
        <Label text="Nom :" style="-fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="nomLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Prénom -->
        <Label text="Prénom :" style="-fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="prenomLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Date de naissance -->
        <Label text="Date de naissance :" style="-fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="dateNaissanceLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Adresse -->
        <Label text="Adresse :" style="-fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Label fx:id="adresseLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <!-- Téléphone -->
        <Label text="Téléphone :" style="-fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <Label fx:id="telephoneLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <!-- Profession -->
        <Label text="Profession :" style="-fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <Label fx:id="professionLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <!-- Nationalité -->
        <Label text="Nationalité :" style="-fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <Label fx:id="nationaliteLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        <!-- Langues parlées -->
        <Label text="Langues parlées :" style="-fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
        <Label fx:id="languesLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

        <!-- Bouton Modifier -->
        <Button text="Modifier le profil" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#handleEditProfile" GridPane.rowIndex="10" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

        <!-- Bouton Enregistrer -->
        <Button text="Enregistrer" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" onAction="#handleSaveProfile" GridPane.rowIndex="11" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

        <!-- Bouton Annuler -->
        <Button text="Annuler" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#handleCancelEdit" GridPane.rowIndex="12" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    </GridPane>

</AnchorPane>
