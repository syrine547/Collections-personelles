<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.GenericCollectionController" style="-fx-background-color: #ecf0f1;">
    <center>
        <TableView fx:id="tableElements" prefHeight="400" prefWidth="900" style="-fx-background-color: white;">
            <!-- Les colonnes dynamiques seront ajoutées ici -->
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
            <Button text="Ajouter un élément" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" onAction="#handleAjouterElement" />
            <Button text="Retour au Dashboard" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#handleRetourDashboard" />
            <Button text="afficher log" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" onAction="#handleaffichelog" />
        </HBox>
    </bottom>
</BorderPane>