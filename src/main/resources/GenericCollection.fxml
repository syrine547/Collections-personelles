<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.GenericCollectionController" style="-fx-background-color: #ecf0f1;">
    <!-- Partie haute : Titre dynamique -->
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #34495e;">
            <Label fx:id="labelTitre" text="Titre de la Collection" style="-fx-font-size: 18px; -fx-text-fill: white;" />
        </HBox>
    </top>

    <!-- Partie centrale : TableView pour afficher les éléments -->
    <center>
        <TableView fx:id="tableElements" style="-fx-background-color: white;" />
    </center>

    <!-- Partie basse : Boutons dynamiques -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #bdc3c7;">
            <Button text="Ajouter un élément" onAction="#handleAjouterElement" />
            <Button text="Retour au Dashboard" onAction="#handleRetourDashboard" />
        </HBox>
    </bottom>
</BorderPane>
