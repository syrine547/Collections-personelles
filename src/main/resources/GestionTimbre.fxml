<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.GestionTimbreController">

    <!-- Partie haute : Champs pour ajouter/modifier un timbre -->
    <top>
        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="fieldNomTimbre" promptText="Nom du Timbre" />
                <TextField fx:id="fieldQuantite" promptText="Quantité" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Ajouter" onAction="#handleAjouterTimbre" />
                <Button text="Modifier" onAction="#handleModifierTimbre" />
                <Button text="Supprimer" onAction="#handleSupprimerTimbre" />
            </HBox>
        </VBox>
    </top>

    <!-- Partie centrale : TableView pour afficher les timbres -->
    <center>
        <TableView fx:id="tableTimbres" prefHeight="400">
            <columns>
                <TableColumn fx:id="colNomTimbre" text="Nom" prefWidth="200" />
                <TableColumn fx:id="colQuantite" text="Quantité" prefWidth="200" />
            </columns>
        </TableView>
    </center>

    <!-- Partie basse : Bouton pour revenir au tableau de bord -->
    <bottom>
        <HBox alignment="CENTER">
            <Button text="Retour au Dashboard" onAction="#handleRetourDashboard" />
        </HBox>
    </bottom>
</BorderPane>
