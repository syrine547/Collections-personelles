<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.GestionPieceMonnaieController">

    <!-- Partie haute : Champs pour ajouter/modifier une pièce de monnaie -->
    <top>
        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="fieldValeur" promptText="Valeur" />
                <TextField fx:id="fieldUnite" promptText="Unité" />
                <TextField fx:id="fieldQuantite" promptText="Quantité" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Ajouter" onAction="#handleAjouterPiece" />
                <Button text="Modifier" onAction="#handleModifierPiece" />
                <Button text="Supprimer" onAction="#handleSupprimerPiece" />
            </HBox>
        </VBox>
    </top>

    <!-- Partie centrale : TableView pour afficher les pièces -->
    <center>
        <TableView fx:id="tablePieces" prefHeight="400">
            <columns>
                <TableColumn fx:id="colValeur" text="Valeur" prefWidth="150" />
                <TableColumn fx:id="colUnite" text="Unité" prefWidth="150" />
                <TableColumn fx:id="colQuantite" text="Quantité" prefWidth="100" />
            </columns>
        </TableView>
    </center>

    <!-- Partie basse : Bouton pour revenir au tableau de bord -->
    <bottom>
        <HBox alignment="CENTER">
            <Button text="Retour au Dashboard" onAction="#handleRetourDashboard" />
        </HBox>
    </bottom>
</BorderPane>
